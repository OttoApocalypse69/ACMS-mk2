<Application x:Class="PixelArtEditor.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PixelArtEditor.UI"
             xmlns:converters="clr-namespace:PixelArtEditor.UI.Converters"
             xmlns:models="clr-namespace:PixelArtEditor.Core.Models;assembly=PixelArtEditor.Core"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <local:FirstCharConverter x:Key="FirstCharConverter"/>
        <local:SkColorToBrushConverter x:Key="SkColorToBrushConverter"/>
        <converters:BoolToVisibilityIconConverter x:Key="BoolToVisibilityIconConverter"/>
        <ObjectDataProvider x:Key="BlendModeEnum" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:BlendMode"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        
        <!-- Modern SVG Tool Icons (Material-style) -->
        <!-- Pencil / brush -->
        <PathGeometry x:Key="PencilIcon">
            M3,17 L3,21 L7,21 L18.5,9.5 L14.5,5.5 Z
        </PathGeometry>

        <!-- Eraser -->
        <PathGeometry x:Key="EraserIcon">
            M4,15 L11,4 L20,13 L13,20 L6,20 Z
        </PathGeometry>

        <!-- Eyedropper -->
        <PathGeometry x:Key="EyedropperIcon">
            M7,17 L5,19 L5,21 L7,21 L9,19 L18,10 C19.1,8.9 19.1,7.1 18,6 C16.9,4.9 15.1,4.9 14,6 L9,11 L11,13 Z
        </PathGeometry>

        <!-- Paint bucket / fill -->
        <PathGeometry x:Key="FillIcon">
            M5,10 L11,4 L17,10 L11,16 Z
            M18,12 C19,13.2 20,14.8 20,16
        </PathGeometry>

        <!-- Rectangle select -->
        <PathGeometry x:Key="SelectIcon">
            M6,4 L18,4 L18,6 L8,6 L8,18 L6,18 Z
            M16,8 L18,8 L18,18 L8,18 L8,16 L16,16 Z
        </PathGeometry>

        <!-- Straight line -->
        <PathGeometry x:Key="LineIcon">
            M5,19 L19,5
        </PathGeometry>

        <!-- Rectangle outline -->
        <PathGeometry x:Key="RectangleIcon">
            M6,6 L18,6 L18,18 L6,18 Z
        </PathGeometry>
    </Application.Resources>
</Application>
