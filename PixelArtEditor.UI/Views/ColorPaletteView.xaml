<UserControl x:Class="PixelArtEditor.UI.Views.ColorPaletteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:PixelArtEditor.UI"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="250">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Color Preview -->
            <RowDefinition Height="Auto"/> <!-- HSV Picker -->
            <RowDefinition Height="Auto"/> <!-- RGB/Hex Inputs -->
            <RowDefinition Height="*"/>    <!-- Palette -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="8">
            <TextBlock Text="COLOR PICKER" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="11"/>
        </Border>

        <!-- Color Preview & Swatches -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Current Color -->
                <Border Grid.Column="0" Height="60" Margin="0,0,4,0" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Background="#1E1E1E">
                    <Grid>
                        <Rectangle Fill="{Binding SelectedColor, Converter={StaticResource SkColorToBrushConverter}}"/>
                        <TextBlock Text="Active" Foreground="White" FontSize="9" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,4">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Color="Black"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <!-- Previous Color (for comparison) -->
                <Border Grid.Column="1" Height="60" Margin="4,0,0,0" Background="#333333" BorderBrush="#555555" BorderThickness="1" CornerRadius="4">
                    <TextBlock Text="Previous" Foreground="#888888" FontSize="9" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                </Border>
            </Grid>
        </Border>

        <!-- HSV Color Picker -->
        <Border Grid.Row="2" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="8">
            <StackPanel>
                <TextBlock Text="HSV" Foreground="#AAAAAA" FontSize="9" FontWeight="SemiBold" Margin="0,0,0,6"/>
                
                <!-- Hue Slider -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="35"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="H" Foreground="#AAAAAA" FontSize="10" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" x:Name="HueSlider" Minimum="0" Maximum="360" Value="180" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="OnHueChanged"/>
                    <TextBlock Grid.Column="2" Text="{Binding ElementName=HueSlider, Path=Value, StringFormat=N0}" Foreground="#DDDDDD" FontSize="10" VerticalAlignment="Center" TextAlignment="Right"/>
                </Grid>
                
                <!-- Saturation Slider -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="35"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="S" Foreground="#AAAAAA" FontSize="10" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" x:Name="SaturationSlider" Minimum="0" Maximum="100" Value="100" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="OnSaturationChanged"/>
                    <TextBlock Grid.Column="2" Text="{Binding ElementName=SaturationSlider, Path=Value, StringFormat=N0}" Foreground="#DDDDDD" FontSize="10" VerticalAlignment="Center" TextAlignment="Right"/>
                </Grid>
                
                <!-- Value Slider -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="35"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="V" Foreground="#AAAAAA" FontSize="10" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1" x:Name="ValueSlider" Minimum="0" Maximum="100" Value="100" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="OnValueChanged"/>
                    <TextBlock Grid.Column="2" Text="{Binding ElementName=ValueSlider, Path=Value, StringFormat=N0}" Foreground="#DDDDDD" FontSize="10" VerticalAlignment="Center" TextAlignment="Right"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- RGB & Hex Inputs -->
        <Border Grid.Row="3" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="8">
            <StackPanel>
                <TextBlock Text="RGB" Foreground="#AAAAAA" FontSize="9" FontWeight="SemiBold" Margin="0,0,0,6"/>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- R -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="R" Foreground="#FF8080" FontSize="9" HorizontalAlignment="Center"/>
                        <TextBox x:Name="RedBox" Text="0" Background="#3E3E42" Foreground="#DDDDDD" BorderBrush="#555555" 
                                 TextAlignment="Center" Padding="4,2" TextChanged="OnRgbChanged"/>
                    </StackPanel>
                    
                    <!-- G -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="G" Foreground="#80FF80" FontSize="9" HorizontalAlignment="Center"/>
                        <TextBox x:Name="GreenBox" Text="0" Background="#3E3E42" Foreground="#DDDDDD" BorderBrush="#555555" 
                                 TextAlignment="Center" Padding="4,2" TextChanged="OnRgbChanged"/>
                    </StackPanel>
                    
                    <!-- B -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="B" Foreground="#8080FF" FontSize="9" HorizontalAlignment="Center"/>
                        <TextBox x:Name="BlueBox" Text="0" Background="#3E3E42" Foreground="#DDDDDD" BorderBrush="#555555" 
                                 TextAlignment="Center" Padding="4,2" TextChanged="OnRgbChanged"/>
                    </StackPanel>
                </Grid>
                
                <!-- Hex Input -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="#" Foreground="#AAAAAA" FontSize="12" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox Grid.Column="1" x:Name="HexBox" Text="000000" Background="#3E3E42" Foreground="#DDDDDD" 
                             BorderBrush="#555555" TextAlignment="Center" Padding="4,2" TextChanged="OnHexChanged" MaxLength="6"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Color Palette -->
        <Border Grid.Row="4" Background="#252526" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="PALETTE" Foreground="#AAAAAA" FontSize="9" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    
                    <ListBox ItemsSource="{Binding Colors}" SelectedItem="{Binding SelectedColor}" 
                             Background="Transparent" BorderThickness="0" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="OnPaletteColorSelected">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Width="220"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="24" Height="24" Margin="2" BorderBrush="#555555" BorderThickness="1" 
                                        CornerRadius="2" Background="{Binding Converter={StaticResource SkColorToBrushConverter}}"
                                        ToolTip="{Binding}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
