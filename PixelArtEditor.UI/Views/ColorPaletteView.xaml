<UserControl x:Class="PixelArtEditor.UI.Views.ColorPaletteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:PixelArtEditor.UI"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="250">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Color Preview -->
            <RowDefinition Height="Auto"/> <!-- Picker -->
            <RowDefinition Height="*"/>    <!-- Palette -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="8">
            <TextBlock Text="COLOR PICKER" Foreground="#CCCCCC" FontWeight="SemiBold" FontSize="11"/>
        </Border>

        <!-- Color Preview & Swatches -->
        <Border Grid.Row="1" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Current Color -->
                <Border Grid.Column="0" Height="60" Margin="0,0,4,0" BorderBrush="#555555" BorderThickness="1" CornerRadius="4" Background="#1E1E1E">
                    <Grid>
                        <Rectangle Fill="{Binding SelectedColor, Converter={StaticResource SkColorToBrushConverter}}"/>
                        <TextBlock Text="Active" Foreground="White" FontSize="9" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,4">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Color="Black"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <!-- Previous Color (for comparison) -->
                <Border Grid.Column="1" Height="60" Margin="4,0,0,0" Background="#333333" BorderBrush="#555555" BorderThickness="1" CornerRadius="4">
                    <TextBlock Text="Previous" Foreground="#888888" FontSize="9" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                </Border>
            </Grid>
        </Border>

        <!-- Aseprite-style Color Picker -->
        <Border Grid.Row="2" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,0,1" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>    <!-- SV square -->
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="24"/>   <!-- Hue bar -->
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="70"/>   <!-- Hex -->
                </Grid.ColumnDefinitions>

                <!-- Saturation / Value square -->
                <Border Grid.Column="0" Height="140" CornerRadius="4" BorderBrush="#444" BorderThickness="1" Background="#000">
                    <Grid>
                        <Image x:Name="SvImage"
                               Stretch="Fill"
                               MouseDown="OnSvMouseDown"
                               MouseMove="OnSvMouseMove"/>
                        <!-- Picker marker -->
                        <Ellipse x:Name="SvMarker"
                                 Width="8" Height="8"
                                 Stroke="White" StrokeThickness="1.5"
                                 Fill="Transparent"
                                 RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="SvMarkerTransform"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>
                </Border>

                <!-- Hue bar -->
                <Border Grid.Column="2" Height="140" CornerRadius="4" BorderBrush="#444" BorderThickness="1">
                    <Grid>
                        <Rectangle>
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFFF0000" Offset="0.0"/>
                                    <GradientStop Color="#FFFFFF00" Offset="0.17"/>
                                    <GradientStop Color="#FF00FF00" Offset="0.33"/>
                                    <GradientStop Color="#FF00FFFF" Offset="0.50"/>
                                    <GradientStop Color="#FF0000FF" Offset="0.67"/>
                                    <GradientStop Color="#FFFF00FF" Offset="0.83"/>
                                    <GradientStop Color="#FFFF0000" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Slider x:Name="HueSlider"
                                Minimum="0" Maximum="360"
                                Orientation="Vertical"
                                Margin="0"
                                Background="Transparent"
                                Style="{x:Null}"
                                ValueChanged="OnHueChanged"/>
                    </Grid>
                </Border>

                <!-- Hex input -->
                <StackPanel Grid.Column="4" VerticalAlignment="Top">
                    <TextBlock Text="HEX" Foreground="#AAAAAA" FontSize="9" Margin="0,0,0,2"/>
                    <Border CornerRadius="3" BorderBrush="#555" BorderThickness="1" Background="#1E1E1E">
                        <TextBox x:Name="HexBox"
                                 Text="FFFFFF"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="#DDDDDD"
                                 Padding="4,2"
                                 MaxLength="6"
                                 CharacterCasing="Upper"
                                 TextAlignment="Center"
                                 TextChanged="OnHexChanged"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Color Palette -->
        <Border Grid.Row="3" Background="#252526" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="PALETTE" Foreground="#AAAAAA" FontSize="9" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    
                    <ListBox ItemsSource="{Binding Colors}" SelectedItem="{Binding SelectedColor}" 
                             Background="Transparent" BorderThickness="0" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="OnPaletteColorSelected">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Width="220"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="24" Height="24" Margin="2" BorderBrush="#555555" BorderThickness="1" 
                                        CornerRadius="2" Background="{Binding Converter={StaticResource SkColorToBrushConverter}}"
                                        ToolTip="{Binding}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
