<Window x:Class="PixelArtEditor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelArtEditor.UI"
        xmlns:views="clr-namespace:PixelArtEditor.UI.Views"
        mc:Ignorable="d"
        Title="ACMS mk2" Height="768" Width="1180"
        Background="#18181C" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" FontSize="12">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>  <!-- Top command bar -->
            <RowDefinition Height="*"/>   <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Top Command Bar -->
        <Border Grid.Row="0" Background="#20232A" BorderBrush="#2C2F36" BorderThickness="0,0,0,1">
            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>  <!-- App title -->
                    <ColumnDefinition Width="Auto"/>  <!-- Menu bar -->
                    <ColumnDefinition Width="*"/>     <!-- Spacer -->
                    <ColumnDefinition Width="Auto"/>  <!-- Zoom indicator -->
                </Grid.ColumnDefinitions>

                <!-- App title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="ACMS mk2" Foreground="#FFFFFF" FontWeight="SemiBold" FontSize="14"/>
                    <TextBlock Text="  ·  Sprite Editor" Foreground="#8A8D93" FontSize="12"/>
                </StackPanel>

                <!-- Menu bar -->
                <Menu Grid.Column="1" Background="Transparent" BorderThickness="0" Foreground="#C5CAE9"
                      VerticalAlignment="Center" FontSize="12">
                    <MenuItem Header="File">
                        <MenuItem Header="Import Image..." Command="{Binding LayerViewModel.ImportImageCommand}"/>
                        <MenuItem Header="Export PNG..." Command="{Binding LayerViewModel.ExportCanvasCommand}"/>
                        <Separator/>
                        <MenuItem Header="Canvas Size">
                            <MenuItem Header="16 x 16" Command="{Binding LayerViewModel.ResizeCanvas16Command}"/>
                            <MenuItem Header="32 x 32" Command="{Binding LayerViewModel.ResizeCanvas32Command}"/>
                            <MenuItem Header="64 x 64" Command="{Binding LayerViewModel.ResizeCanvas64Command}"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Exit" Command="{Binding ExitApplicationCommand}"/>
                    </MenuItem>

                    <MenuItem Header="Edit">
                        <MenuItem Header="Undo" Command="{Binding ToolbarViewModel.UndoCommand}"/>
                        <MenuItem Header="Redo" Command="{Binding ToolbarViewModel.RedoCommand}"/>
                    </MenuItem>
                </Menu>

                <!-- Zoom indicator -->
                <Border Grid.Column="3" CornerRadius="4" Background="#2B2F37" Padding="8,4" Margin="0,0,4,0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CanvasViewModel.Zoom, StringFormat=Zoom {0:0.0}x}" Foreground="#CED0D6"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Toolbar -->
                <ColumnDefinition Width="*"/>    <!-- Canvas -->
                <ColumnDefinition Width="5"/>    <!-- Splitter -->
                <ColumnDefinition Width="250"/>  <!-- Right Panels -->
            </Grid.ColumnDefinitions>

            <!-- Toolbar -->
            <views:ToolbarView Grid.Column="0" DataContext="{Binding ToolbarViewModel}"/>

            <!-- Canvas -->
            <views:CanvasView Grid.Column="1" DataContext="{Binding CanvasViewModel}"/>

            <!-- Right Splitter -->
            <GridSplitter Grid.Column="2" Width="5" HorizontalAlignment="Stretch" Background="#3E3E42"/>

            <!-- Right Panels (Layers, Colors) -->
            <Grid Grid.Column="3" Background="#252526">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Color Palette -->
                    <RowDefinition Height="5"/>    <!-- Splitter -->
                    <RowDefinition Height="*"/>    <!-- Layers -->
                </Grid.RowDefinitions>

                <views:ColorPaletteView Grid.Row="0" DataContext="{Binding ColorPaletteViewModel}"/>
                
                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#3E3E42"/>
                
                <views:LayerPanelView Grid.Row="2" DataContext="{Binding LayerViewModel}"/>
            </Grid>
        </Grid>

        <!-- Timeline removed for now to keep UI clean until animation is implemented -->
    </Grid>
</Window>
